<header id="header">
  <nav id="bg-gradient" class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container d-flex">
      <a class="navbar-brand" id="logo-profile" href="/<%= infoUser.username %>">
        <strong>Cofluencer</strong>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto d-flex" id="menu">
          <% if (userRol === 'influencers') { %>
          <li class="nav-item">
              <a class="nav-link" id="nav-link" href="/<%= infoUser.username %>/campaigns">
                <i class="fa fa-bullhorn icon-campaign"></i>
              </a>
            </li>
            <% } %>
          <li class="nav-item">
              <% if (userRol === 'companies') { %>
                <a class="nav-link" id="nav-link" href="/<%= infoUser.username %>/campaigns/new">
                  <i class="fa fa-plus icon-mycampaign"></i>
                </a>
              <% } else { %>
                <a class="nav-link" id="nav-link" href="/<%= infoUser.username %>/campaigns/me">
                  <i class="fa fa-heart icon-mycampaign"></i>
                </a>
              <% } %>
          </li>
          <li class="nav-item">
            <div class="dropdown user-area">
              <div class="user-avatar dropdpwn-toggle" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <% if (userRol === 'companies') { %>
                  <img src="/img/company-profile.png" alt="cofluencer-logo" class="img-avatar">
                  <% } else { %>
                    <img src="<%=infoUser.profileImage %>" alt="avatar-<%=infoUser.username%>" class="img-avatar">
                    <% } %>
              </div>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                <a class="dropdown-item" href="/<%= infoUser.username %>">My Profile</a>
                <a class="dropdown-item" href="/<%= infoUser.username %>/edit">Edit Profile</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/logout">Logout</a>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>

</header>