<!-- Login -->
<div class="modal fade modal-fullscreen modal-fluid" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>

  <div class="d-flex">
    <!-- Modal Company -->
    <div class="modal-dialog col-md-6 ml-auto" role="document">
      <div class="modal-content" id="companyModal">
        <div class="modal-header d-flex flex-column">
          
          <h4 class="w-100 text-center p-2">Company</h4>
          <p class="text-center p-2">Use your credentials to log in and enter to your personals dashboard.</p>
          
        </div>

        <form action="/login" method="post">
        
          <div class="modal-body mx-3">
            
            <div class="md-form">
              <i class="fa fa-user prefix grey-text"></i>
              <input type="text" name="username" id="defaultForm-name" class="form-control validate">
              <label data-error="wrong" data-success="right" for="defaultForm-name">Your username</label>
            </div>
          
            <div class="md-form">
              <i class="fa fa-lock prefix grey-text"></i>
              <input type="password" name="password" id="defaultForm-pass" class="form-control validate">
              <label data-error="wrong" data-success="right" for="defaultForm-pass">Your password</label>
            </div>

          </div>

          <div class="modal-footer d-flex justify-content-center">
            <button class="btn btn-default">Login</button>
          </div>

        </form>

      </div>

    </div>

    <!-- Modal Influencer -->
    <div class="modal-dialog col-md-6 ml-auto" role="document">
      <div class="modal-content" id="companyModal">
        
        <div class="modal-header d-flex flex-column">
    
          <h4 class="w-100 text-center p-2">Influencer</h4>
          <p class="text-center p-2">Enter to your dashboard through your instagram credentials.</p>
          
        </div>
    
        <div class="modal-body mx-3">
  
        </div>
  
        <div class="modal-footer d-flex justify-content-center">
          <form method="get" action="/auth/facebook">
            <button type="submit" class="btn btn-default">Sign Up with Instagram</button>
          </form>
        </div>

      </div>
    
    </div>
    
  </div>

</div>

