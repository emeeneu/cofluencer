<!--Section: Masonry-Cards Made with Grid CSS-->

<section class="text-center py-4 container">
  <!--Section heading-->
  <div class="section-title">
    <div class="social-network-column">
      <img class="brand-logo" src="img/instagram-logo.png" alt="instagram-logo">
    </div>
    <div class="social-network-column">
      <ul class="social-data">
        <li class="social-data-item">
          <a href="https://www.instagram.com/<%=iguser.username%>" target="_blank" class="email-link"><span class="span">@</span><%=iguser.username%></a>
        </li>
        <li class="social-data-item"><span class="span"><%=iguser.media_count%></span> posts</li>
        <li class="social-data-item"><span class="span"><%=iguser.followers_count%></span> followers</li>
      </ul>
    </div>
  </div>

  <div class="grid">
    <% for(var i = 0; i <= 8; i++) { %>

      <div class="item">

        <div class="content img-container overlay rounded z-depth-2">

          <img class="img-fluid" src="<%=iguser.media.data[i].media_url%>" alt="instagram-image-<%=i%>">
          <a href="https://www.instagram.com/<%=iguser.username%>" target="_blank">
            
            <div class="after">

              <div class="positioner">

                <span class="icon">
                  <i class="fa fa-heart"><span class="icon-data"> <%=iguser.media.data[i].like_count%></span></i>
                </span>
                <span class="icon">
                  <i class="fa fa-comment"><span class="icon-data"> <%=iguser.media.data[i].comments_count%></span></i>
                </span>

              </div>

            </div>

          </a>
        </div>

      </div>

    <% } %>
  </div>

</section>

