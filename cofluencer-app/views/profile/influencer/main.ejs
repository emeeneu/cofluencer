<!-- Author box -->
<div class="container">

  <div class="p-5 text-center text-md-left author-box">
    <!-- Name -->
    <div class="row">
      <!-- Avatar -->
      <div class="col-12 col-md-2 mb-md-0 mb-4">
        <img src="<%= infoUser.profileImage %>" class="img-fluid rounded-circle z-depth-2 avatar">
      </div>
      <!-- Author Data -->
      <div class="col-12 col-md-10">

        <div class="row">
          <div class="col-8">
            <h5 class="font-weight-bold dark-grey-text mb-3">
              <strong><%= infoUser.name %> <%= infoUser.lastname %></strong>
            </h5>
          </div>
        </div>
        

        <div class="personal-sm pb-3">
          <a class="pr-2 email-ic email-link" href="https://www.facebook.com/<%=infoUser.socialLinks.facebook%>" target="_blank">
            <i class="fa fa-facebook mr-2"> </i>
          </a>
          <a class="pr-2 ig-ic email-link" href="https://www.instagram.com/<%=iguser.username%>" target="_blank">
            <i class="fa fa-instagram mr-2"></i>
          </a>
          <a class="pr-2 ig-ic email-link" href="https://www.twitter.com/<%=infoUser.socialLinks.twitter%>" target="_blank">
            <i class="fa fa-twitter mr-2"></i>
          </a>
          <a class="pr-2 ig-ic email-link" href="https://www.youtube.com/channel/<%=infoUser.socialLinks.youtube%>" target="_blank">
            <i class="fa fa-youtube mr-2"></i>
          </a>
        </div>

        <p><%= infoUser.address.city %></p>
        <p><%= infoUser.bio %></p>
        <div>
          <a href="/<%= infoUser.username %>/campaigns">
            <button type="button" class="btn btn-author"><i class="fa fa-bullhorn icon-campaign pr-2"></i>Search Campaigns</button>
          </a>
          <a href="/<%= infoUser.username %>/campaigns/me">
            <button type="button" class="btn btn-author"><i class="fa fa-heart icon-mycampaign pr-1"></i>My campaigns</button>
          </a>
          <a href="/<%= infoUser.username %>/edit">
            <button type="button" class="btn btn-author"><i class="fa fa-edit icon-mycampaign pr-1"></i>Edit profile</button>
          </a>
        </div>
      </div>
    </div>
  </div>
  
</div>
