<div class="container">
  <!--Section: Blog v.3-->
  <section class="py-4">

    <!--Section heading-->
    <h2 class="h1 text-center mb-5">My Campaigns</h2>
    <!--Section description-->
    <p class="text-center mb-5 pb-5">Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint
      occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>

    <ul>
      <% campaigns.forEach((campaign) => { %>
        <li>
          <!--Grid row-->
          <div class="row">

            <!--Grid column-->
            <div class="col-lg-5 col-xl-4 mb-4">
              <!--Featured image-->
              <div class="overlay rounded z-depth-1-half">
                <img src="https://mdbootstrap.com/img/Photos/Others/images/49.jpg" class="img-fluid" alt="First sample image">
                <a>
                  <div class="mask rgba-white-slight"></div>
                </a>
              </div>
            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-lg-7 col-xl-7 ml-xl-4 mb-4">
              <h3 class="mb-3 font-weight-bold dark-grey-text">
                <strong>
                  <%= campaign.title %>
                </strong>
              </h3>
              <p class="grey-text">
                <%= campaign.description %>
              </p>
              <p>
                <%= campaign.state %>
              </p>
              <p>by
                <a href="/<%=infoUser.username%>/company/<%=campaign.company_id.username%>" class="font-weight-bold dark-grey-text"><%=campaign.company_id.username%></a>,
                <%=moment(campaign.created_at).format('l')%>
              </p>
              <!-- button function -->
              <% let influencers = campaign.influencer_id 
               let status
               let buttonText %>
                <% if (influencers == null) {
              buttonText = 'Check in!';
              status = 'follow';
            } else if (influencers.indexOf(infoUser._id) === -1 ) {
                status = 'follow';
                buttonText = 'Check in!';
              } else {
                status = 'unfollow';
                buttonText = 'Check out!';
              }%>
                  <a href="/<%= infoUser.username %>/campaigns/<%= campaign.title %>">Show campaign</a>
                  <a class="btn btn-primary btn-md" id="<%= status %>" value="<%= campaign._id %>" user="<%= infoUser.username %>">
                    <%= buttonText %>
                  </a>
            </div>
            <!--Grid column-->
          </div>
          <!--Grid row-->
          <hr class="mb-5">
        </li>
        <% }) %>
    </ul>
  </section>
  <!--Section: Blog v.3-->
</div>